<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
        integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    {{>navbar}}

    <div class="container card">
        <div class="row">
            <div class="col d-flex align-items-center justify-content-center">
                <h1 style="color: #0d6efd;;">User Profile <i class="fa-solid fa-user-secret"
                        style="color: black;"></i></i></h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <table>
                    <thead>
                        <tr>
                            <th>Name:</th>
                            <td>{{userName}}</td>
                        </tr>
                        <tr>
                            <th>User ID:</th>
                            <td>{{userId}}</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>{{emailId}}</td>
                        </tr>
                        <tr>
                            <th>Mobile:</th>
                            <td>{{mobileNo}}</td>
                        </tr>
                        <tr>
                            <th>cource:</th>
                            <td>{{course}}</td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="row m-3">
            <button type="button" class="btn btn-primary editBtn">Edit Profile</button>
        </div>
    </div>
    {{>edit}}


    {{>join}}
    {{>footer}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
    <script src="js/btn.js"></script>
    <script>
        var typed1 = new Typed(".multiText1", {
            strings: ["#twitter", "#Instagram", "#LinkedIn"],
            loop: true,
            typeSpeed: 100,
            backSpeed: 80
        })
        const editBtn=document.querySelector('.editBtn');
        const colseBtn=document.querySelector('.close-icon');
        const edit=document.querySelector('.edit');
        editBtn.onclick=function(){
            edit.classList.add('active2');
        }
        colseBtn.onclick=function(){
            edit.classList.remove('active2');
        }
    </script>
</body>

</html>